<div class="min-h-screen flex items-center justify-center  px-4">
  <div class="card w-full max-w-md bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-2xl font-bold text-center mb-6">Sign In</h2>

      <%= form_with url: session_path, local: true, class: "space-y-4" do |form| %>
        <div>
          <%= form.label :email_address, class: "label" do %>
            <span class="label-text">Email Address</span>
          <% end %>
          <%= form.email_field :email_address, 
                placeholder: "Enter your email", 
                class: "input input-bordered w-full",
                required: true,
                autofocus: true %>
        </div>

        <div>
          <%= form.label :password, class: "label" do %>
            <span class="label-text">Password</span>
          <% end %>
          <%= form.password_field :password, 
                placeholder: "Enter your password", 
                class: "input input-bordered w-full",
                required: true %>
        </div>

        <div class="card-actions justify-center mt-6">
          <%= form.submit "Sign In", class: "btn btn-primary w-full" %>
        </div>
      <% end %>

      <div class="divider">OR</div>

      <div class="text-center space-y-2">
        <%= link_to "Forgot your password?", new_password_path, class: "link link-primary" %>
        <br>
        <%= link_to "Don't have an account? Sign Up", new_registration_path, class: "link link-secondary" %>
      </div>
    </div>
  </div>
</div>
