<div class="min-h-screen flex items-center justify-center  px-4">
  <div class="card w-full max-w-md bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-2xl font-bold text-center mb-6">Set New Password</h2>
      
      <div class="alert alert-info mb-6">
        <%= lucide_icon('info', class: 'stroke-current shrink-0 w-6 h-6') %>
        <span>Choose a strong password with at least 8 characters.</span>
      </div>

      <%= form_with url: password_path(params[:token]), method: :patch, local: true, class: "space-y-4" do |form| %>
        <div>
          <%= form.label :password, class: "label" do %>
            <span class="label-text">New Password</span>
          <% end %>
          <%= form.password_field :password, 
                placeholder: "Enter new password", 
                class: "input input-bordered w-full",
                required: true,
                autofocus: true,
                minlength: 8 %>
        </div>

        <div>
          <%= form.label :password_confirmation, class: "label" do %>
            <span class="label-text">Confirm New Password</span>
          <% end %>
          <%= form.password_field :password_confirmation, 
                placeholder: "Confirm new password", 
                class: "input input-bordered w-full",
                required: true,
                minlength: 8 %>
        </div>

        <div class="card-actions justify-center mt-6">
          <%= form.submit "Update Password", class: "btn btn-primary w-full" %>
        </div>
      <% end %>

      <div class="divider"></div>

      <div class="text-center">
        <%= link_to "Back to Sign In", new_session_path, class: "link link-neutral" %>
      </div>
    </div>
  </div>
</div>
