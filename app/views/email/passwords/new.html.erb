<div class="min-h-screen flex items-center justify-center  px-4">
  <div class="card w-full max-w-md bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-2xl font-bold text-center mb-6">Reset Password</h2>
      
      <div class="alert alert-info mb-6">
        <%= lucide_icon('info', class: 'stroke-current shrink-0 w-6 h-6') %>
        <span>Enter your email address and we'll send you a link to reset your password.</span>
      </div>

      <%= form_with url: passwords_path, local: true, class: "space-y-4" do |form| %>
        <div>
          <%= form.label :email_address, class: "label" do %>
            <span class="label-text">Email Address</span>
          <% end %>
          <%= form.email_field :email_address, 
                placeholder: "Enter your email address", 
                class: "input input-bordered w-full",
                required: true,
                autofocus: true %>
        </div>

        <div class="card-actions justify-center mt-6">
          <%= form.submit "Send Reset Instructions", class: "btn btn-primary w-full" %>
        </div>
      <% end %>

      <div class="divider"></div>

      <div class="text-center">
        <%= link_to "Back to Sign In", new_session_path, class: "link link-neutral" %>
      </div>
    </div>
  </div>
</div>
